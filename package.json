{
    "name": "webgl-monorepo",
    "private": true,
    "workspaces": [
        "src/WebGL/*"
    ],
    "scripts": {
        "dev": "npm run dev --workspaces",
        "dev:heart": "npm run dev -w webgl-heart",
        "dev:tree": "npm run dev -w webgl-tree",
        "dev:music": "npm run dev -w birth",
        "serve": "npx vite",
        "build": "npm run build --workspaces",
        "install-all": "npm install"
    },
    "devDependencies": {
        "typescript": "^5.0.0",
        "vite": "^7.3.0"
    },
    "dependencies": {
        "legendary-cursor": "^1.0.2",
        "three": "^0.182.0"
    }
}
